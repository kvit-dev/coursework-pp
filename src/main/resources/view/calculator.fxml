<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.CalculatorController" spacing="10" alignment="CENTER" styleClass="dialog-root">
    <Label text="Калькулятор доходу по вкладу" style="-fx-font-size: 16px;" />
    <TextField fx:id="amountField" promptText="Сума вкладу (₴)" />
    <TextField fx:id="rateField" promptText="Ставка (%)" />
    <TextField fx:id="monthsField" promptText="Термін (міс.)" />
    <Button text="Розрахувати" onAction="#onCalculate" />
    <Label fx:id="resultLabel" style="-fx-font-weight: bold;" />
</VBox>